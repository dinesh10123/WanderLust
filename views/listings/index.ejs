<% layout("/layouts/boilerplate") %>

<style>
    #filters {
        margin-top: 1rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
        transition: 200ms ease;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
        transform: scale(1.05);
    }

    .filter p {
        font-size: 0.9rem;
        margin-top: 0.3rem;
    }

    .tax-info {
        display: none;
    }

    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3rem;
        padding: 1rem;
        margin-left: 0.6rem;
        display: flex;
        align-items: center;
    }

    .listing-card img {
        object-fit: cover;
        width: 100%;
        height: 20rem;
        border-radius: 12px;
    }

    .listing-link {
        text-decoration: none;
        color: inherit;
    }
</style>

<div id="filters">
    <% const filterOptions = [
        { icon: "fa-fire-flame-curved", label: "Trending" },
        { icon: "fa-bed", label: "Rooms" },
        { icon: "fa-mountain-city", label: "Iconic Cities" },
        { icon: "fa-mountain", label: "Mountains" },
        { icon: "fa-chess-rook", label: "Castles" },
        { icon: "fa-person-swimming", label: "Amazing Pools" },
        { icon: "fa-tractor", label: "Farms" },
        { icon: "fa-tents", label: "Camps" },
        { icon: "fa-snowflake", label: "Arctic" },
        { icon: "fa-ship", label: "Boats" }
    ]; %>

    <% filterOptions.forEach(f => { %>
        <div class="filter">
            <div><i class="fa-solid <%= f.icon %>"></i></div>
            <p><%= f.label %></p>
        </div>
    <% }) %>

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input 
                class="form-check-input" 
                type="checkbox" 
                role="switch" 
                id="switchCheckDefault">
            <label 
                class="form-check-label ms-2" 
                for="switchCheckDefault">
                Display total after taxes
            </label>
        </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 g-4">
    <% if(allListings.length === 0) { %>
        <h4 class="text-center mt-5">No listings found.</h4>
    <% } %>

    <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link col">
            <div class="card listing-card">

                <img 
                    src="<%= listing.image?.url || '/images/placeholder.png' %>" 
                    alt="<%= listing.title %> image" 
                    onerror="this.src='/images/placeholder.png'">

                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        â‚¹ <%= listing.price.toLocaleString("en-IN") %>/night
                        <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                    </p>
                    <p class="text-muted small">
                        <%= listing.location %>, <%= listing.country %>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

<script>
    const taxSwitch = document.getElementById("switchCheckDefault");

    taxSwitch.addEventListener("change", () => {
        const taxInfoElements = document.querySelectorAll(".tax-info");

        taxInfoElements.forEach(info => {
            info.style.display = taxSwitch.checked ? "inline" : "none";
        });
    });
</script>
